<%- model_class = Local -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @local.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @local.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:escola) %>:</strong></dt>
  <dd><%= @local.escola %></dd>
  <dt><strong><%= model_class.human_attribute_name(:municipio_id) %>:</strong></dt>
  <dd><%= @local.municipio_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_pai_id) %>:</strong></dt>
  <dd><%= @local.local_pai_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_locals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_local_path(@local), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_local_path(@local),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
