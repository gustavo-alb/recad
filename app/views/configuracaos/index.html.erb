<%- model_class = Configuracao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:periodo_inicio) %></th>
      <th><%= model_class.human_attribute_name(:periodo_fim) %></th>
      <th><%= model_class.human_attribute_name(:aberto_escolas) %></th>
      <th><%= model_class.human_attribute_name(:aberto_departamento) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @configuracaos.each do |configuracao| %>
      <tr>
        <td><%= link_to configuracao.id, configuracao_path(configuracao) %></td>
        <td><%= configuracao.periodo_inicio %></td>
        <td><%= configuracao.periodo_fim %></td>
        <td><%= configuracao.aberto_escolas %></td>
        <td><%= configuracao.aberto_departamento %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_configuracao_path(configuracao), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      configuracao_path(configuracao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_configuracao_path,
            :class => 'btn btn-primary' %>
