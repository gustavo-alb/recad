<%- model_class = Configuracao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:periodo_inicio) %>:</strong></dt>
  <dd><%= @configuracao.periodo_inicio.strftime("%d/%m/%Y %T") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periodo_fim) %>:</strong></dt>
  <dd><%= @configuracao.periodo_fim.strftime("%d/%m/%Y %T") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aberto_escolas) %>:</strong></dt>
  <dd><%= objeto_valor(@configuracao.aberto_escolas) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aberto_departamento) %>:</strong></dt>
  <dd><%= objeto_valor(@configuracao.aberto_departamento) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              configuracaos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_configuracao_path(@configuracao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              configuracao_path(@configuracao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
