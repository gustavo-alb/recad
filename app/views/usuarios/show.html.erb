<%- model_class = Usuario -%>
<%content_for :header do%>
<%=t '.title', :default => model_class.model_name.human.titleize %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.cpf) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.nome) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.admin) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mudar_senha) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.mudar_senha) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inep) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.inep) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_id) %>:</strong></dt>
  <dd><%= objeto_valor(@usuario.local) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_usuarios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_usuario_path(@usuario), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_usuario_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
