<%= simple_form_for @usuario,:url=>@caminho, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cpf,input_html:{class: "cpf"}%>
  <%= error_span(@usuario[:cpf]) %>
  <%= f.input :nome %>
  <%= error_span(@usuario[:nome]) %>
  <%= f.input :admin,:collection=>[["Sim",true],["Não",false]] %>
  <%= error_span(@usuario[:admin]) %>
  <%= f.input :gestor_seed,:collection=>[["Sim",true],["Não",false]] %>
  <%= error_span(@usuario[:gestor_seed]) %>
  <%= f.input :gestor_setorial,:collection=>[["Sim",true],["Não",false]] %>
  <%= error_span(@usuario[:gestor_setorial]) %>
   <%= f.input :editor,:collection=>[["Sim",true],["Não",false]] %>
  <%= error_span(@usuario[:editor]) %>
  <% if @usuario.local %>
  <%= f.input :local,:collection=>@locais,:selected=>@usuario.local_id%>
  <% else %>
  <%= f.input :local,:collection=>@locais %>
  <% end %>
  <%= error_span(@usuario[:local]) %>
  <%= f.input :password,:label=>"Senha" %>
  <%= error_span(@usuario[:password]) %>
  <%= f.input :password,:label=>"Confirmação de Senha" %>
  <%= error_span(@usuario[:password]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_usuarios_path, :class => 'btn btn-default' %>
<% end %>
