<%- model_class = Usuario -%>
<%content_for :header do%>
<%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% end %>


<%= search_form_for @q,:url=>admin_usuarios_path do |f| %>

<%= f.label "Busca" %>
<%= f.search_field :nome_or_inep_or_cpf_cont %>
<%= f.submit %>
<% end %>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:inep) %></th>
      <th><%= sort_link(@q, :nome,default_order: :asc)%></th>
      <th><%= model_class.human_attribute_name(:cpf) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:senha_ja_alterada) %></th>
      <th><%= model_class.human_attribute_name(:local) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
    <tr>
      <td><%= link_to usuario.inep, admin_usuario_path(usuario) %></td>
      <td><%= objeto_valor(usuario.nome) %></td>
      <td><%= objeto_valor(usuario.cpf) %></td>
      <td><%= objeto_valor(usuario.admin) %></td>
      <td><%= objeto_valor(usuario.mudar_senha) %></td>
      <td><%= objeto_valor(usuario.local) %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_admin_usuario_path(usuario), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        admin_usuario_path(usuario),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @usuarios, renderer: BootstrapPagination::Rails,:previous_label=>"<",:next_label=>">"%><br/>
<%= link_to t('.new', :default => t("helpers.links.new")),
new_admin_usuario_path,
:class => 'btn btn-primary' %>
