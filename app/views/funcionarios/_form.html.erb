<%= simple_form_for(@funcionario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :cpf %>
    <%= f.input :cadastro %>
    <%= f.input :classe %>
    <%= f.input :padrao %>
    <%= f.input :carga_horaria %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
