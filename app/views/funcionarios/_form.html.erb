<%= simple_form_for @funcionario, :html => { :class => 'form-condensed' } do |f| %>

<%= f.input :local,:as=>:hidden,:input_html=>{:value=>current_usuario.local} %>

<%= f.input :nome %>
<%= error_span(@funcionario[:nome]) %>
<%= f.input :cpf,:label=>"CPF",:input_html=>{:class=>"cpf"} %>
<%= error_span(@funcionario[:cpf]) %>
<%= f.input :cadastro %>
<%= error_span(@funcionario[:cadastro]) %>
<%= f.input :cargo,:collection=>@cargos,:label=>"Cargo"%>
<%= error_span(@funcionario[:cargo]) %>
<%= f.input :quadro,:collection=>@quadros %>
<%= error_span(@funcionario[:quadro]) %>
<div class="js-dependent-fields" data-select-id='funcionario_quadro' data-option-value='Estadual|Federal'>
	<%= f.input :classe,:collection=>@classes %>
	<%= error_span(@funcionario[:classe]) %>
	<%= f.input :padrao,:collection=>@padroes,:label=>"Padrão"%>
	<%= error_span(@funcionario[:padrao]) %>
	<%= f.input :municipio_concurso,:label=>"Município do Concurso",:collection=>@municipios,:selected=>@funcionario.municipio_concurso if @funcionario.municipio_concurso and !@funcionario.new_record? %>
	<%= error_span(@funcionario[:municipio_concurso]) %>
	<%= f.input :situacao,:label=>"Situação",:collection=>@situacoes %>
	<%= error_span(@funcionario[:concurso]) %>
	<div class="js-dependent-fields" data-select-id='funcionario_municipio_concurso' data-option-value='<%=Municipio.find_by(:nome=>'Macapá').id%>|<%=Municipio.find_by(:nome=>'Santana').id%>'>
		<%= f.input :area_concurso,:label=>"Área",:collection=>["Urbana","Rural"] %>
		<%= error_span(@funcionario[:area_concurso]) %>
	</div>
	<div class="js-dependent-fields" data-select-id='funcionario_cargo' data-option-value='Professor'>
		<%= f.input :disciplina_concurso,:label=>"Disciplina do Concurso",:collection=>@disciplinas,:selected=>@funcionario.disciplina_concurso if @funcionario.disciplina_concurso and !@funcionario.new_record?%>
		<%= error_span(@funcionario[:disciplina_concurso]) %>
	</div>
</div>
<div class="js-dependent-fields" data-select-id='funcionario_quadro' data-option-value='Estadual'>
	<%= f.input :concurso,:collection=>@concursos %>
	<%= error_span(@funcionario[:concurso]) %>
</div>
<%= f.input :carga_horaria,:collection=>@cargas_horarias,:label=>"Carga Horária do vínculo" %>
<%= error_span(@funcionario[:carga_horaria]) %>
<%= f.input :ambiente,:collection=>@ambientes %>
<%= error_span(@funcionario[:ambiente]) %>


<div class="js-dependent-fields" data-select-id='funcionario_ambiente' data-option-value='Sala de Aula'>
	<%= f.input :disciplina_atuacao,:collection=>@disciplinas,:selected=>@funcionario.disciplina_atuacao if @funcionario.disciplina_atuacao and !@funcionario.new_record?%>
	<%= error_span(@funcionario[:disciplina_atuacao]) %>
	<%= f.input :turmas,:label=>"Numero de Turmas",:as=>:integer %>
	<%= error_span(@funcionario[:turmas]) %>
	<%= f.input :ch_em_sala,:label=>"Carga Horária em sala",:as=>:integer %>
	<%= error_span(@funcionario[:ch_em_sala]) %>
</div>
<div class="js-dependent-fields" data-select-id='funcionario_ambiente' data-option-value='Coordenação de Programa Estadual|Coordenação de Programa Federal'>
	<%= f.input :programa,:label=>"Nome do Programa" %>
	<%= error_span(@funcionario[:programa]) %>
</div>
<%#= f.input :local,:url=>autocomplete_local_nome_funcionarios_path,:as=>:autocomplete %>


<%= f.button :submit, :class => 'btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
funcionarios_path, :class => 'btn btn-default' %>
<% end %>
