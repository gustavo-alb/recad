<%- model_class = Disciplina -%>
<%content_for :header do%>
<%=t '.title', :default => model_class.model_name.human.titleize %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @disciplina.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @disciplina.codigo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_disciplinas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_disciplina_path(@disciplina), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_disciplina_path(@disciplina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
