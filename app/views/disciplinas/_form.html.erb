<%= simple_form_for @disciplina, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= error_span(@disciplina[:nome]) %>
  <%= f.input :codigo %>
  <%= error_span(@disciplina[:codigo]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                disciplinas_path, :class => 'btn btn-default' %>
<% end %>
